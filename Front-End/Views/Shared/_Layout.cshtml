        <a class="navbar-brand fw-bold" href="/">ðŸ’‹ WISHLIST</a>
        <div class="d-flex align-items-center">
            @if (Context.Session.GetString("UserName") != null) {
                <span class="text-white me-3">OlÃ¡, <strong>@Context.Session.GetString("UserName")</strong>! ðŸ’•</span>
                <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-light btn-sm rounded-pill px-3">Sair</a>
            }
        </div>
