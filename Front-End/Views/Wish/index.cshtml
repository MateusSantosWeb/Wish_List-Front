@using Microsoft.AspNetCore.Http
@model IEnumerable<WishListWeb.Models.WishViewModel>

@{
    // 1. Extra√≠mos os valores din√¢micos para vari√°veis de texto simples (strings)
    // Usamos o Context direto para evitar depend√™ncias de inje√ß√£o que podem falhar
    var rawRole = Context.Session.GetString("UserRole") ?? "Namorado";
    var rawName = Context.Session.GetString("UserName") ?? "Usu√°rio";

    // 2. Criamos vari√°veis booleanas (Sim/N√£o) para as permiss√µes
    // Isso remove qualquer opera√ß√£o din√¢mica de dentro do HTML
    bool exibirBotaoCriar = rawRole.Equals("Namorada", StringComparison.OrdinalIgnoreCase) || 
                            rawName.ToLower().Contains("ana");
    
    bool ehNamorada = exibirBotaoCriar;

    // 3. Preparamos as mensagens para evitar l√≥gica no HTML
    string saudacao = "Ol√° " + rawName + ", bem-vinda! üíï";
    string mensagemVazia = ehNamorada ? "Que tal come√ßar a sonhar agora? ‚ú®" : "Sua namorada ainda n√£o adicionou nada. üíî";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="display-5 fw-bold text-primary">üíå Nossa Lista de Desejos</h1>
        <p class="text-muted">@saudacao</p>
    </div>
    
    @if (exibirBotaoCriar) {
        <a asp-action="Create" class="btn btn-primary btn-lg shadow px-4">
            <i class="bi bi-plus-lg me-2"></i>Novo Desejo
        </a>
    }
</div>

<div class="row">
    @if (Model == null || !Model.Any()) {
        <div class="col-12 text-center py-5">
            <div class="empty-state-card">
                <div class="empty-state-icon">üí´</div>
                <h3 class="mt-3 text-primary">Ainda n√£o h√° desejos por aqui...</h3>
                <p class="text-muted">@mensagemVazia</p>
                
                @if (ehNamorada) { 
                    <a asp-action="Create" class="btn btn-outline-primary mt-3 rounded-pill px-4">
                        <i class="bi bi-heart me-2"></i>Adicionar meu primeiro desejo
                    </a> 
                }
            </div>
        </div>
    } else {
        @foreach (var item in Model) {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm overflow-hidden">
                    <img src="@(string.IsNullOrEmpty(item.ImagemUrl) ? "https://placehold.co/600x400?text=Presente+Especial" : item.ImagemUrl )" class="card-img-top" style="height: 200px; object-fit: cover;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between mb-2">
                            <h5 class="card-title fw-bold">@item.Titulo</h5>
                            <span class="badge bg-light text-primary border">@item.Categoria</span>
                        </div>
                        <p class="card-text text-muted small">@item.Descricao</p>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <div class="d-flex flex-column gap-1">
                                <span class="badge @(item.Prioridade == "Alta" ? "bg-danger" : "bg-info")">@item.Prioridade</span>
                                <span class="badge @(item.Status == "Realizado" ? "bg-success" : "bg-secondary")">
                                    @(string.IsNullOrEmpty(item.Status) ? "Pendente" : item.Status)
                                </span>
                            </div>
                            
                            @if (!ehNamorada) {
                                <div class="d-flex gap-2">
                                    <form asp-action="UpdateStatus" asp-route-id="@item.Id" method="post">
                                        <input type="hidden" name="status" value="Realizado" />
                                        <button type="submit" class="btn btn-success btn-sm rounded-pill px-3" title="Marcar como realizado">
                                            <i class="bi bi-check2-circle me-1"></i>Realizado
                                        </button>
                                    </form>
                                    <form asp-action="UpdateStatus" asp-route-id="@item.Id" method="post">
                                        <input type="hidden" name="status" value="Pendente" />
                                        <button type="submit" class="btn btn-outline-secondary btn-sm rounded-pill px-3" title="Marcar como pendente">
                                            <i class="bi bi-arrow-counterclockwise me-1"></i>Pendente
                                        </button>
                                    </form>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Apagar?');">
                                        <button type="submit" class="btn btn-outline-danger btn-sm rounded-circle" title="Deletar desejo">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            } else {
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Apagar?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-circle" title="Deletar desejo">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
